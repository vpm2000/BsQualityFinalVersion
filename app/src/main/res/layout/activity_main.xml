<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C2C2C2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/BsLogo"
        android:layout_width="671dp"
        android:layout_height="460dp"
        android:layout_marginTop="44dp"
        android:background="#007C7A7A"
        android:contentDescription="@string/logo_bs_quality"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/consulCil"
        android:layout_width="640dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btnredondo"
        android:text="@string/consultarCil"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anadirCil" />

    <Button
        android:id="@+id/anadirCil"
        android:layout_width="640dp"
        android:layout_height="120dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/btnredondo"
        android:text="@string/aÃ±adir_cilindros"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BsLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>